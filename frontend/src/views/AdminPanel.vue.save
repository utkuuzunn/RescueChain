<script setup>
import { onMounted, ref } from 'vue'
import axios from 'axios'
import L from 'leaflet'
import 'leaflet/dist/leaflet.css'
import 'leaflet-routing-machine'
import 'leaflet-routing-machine/dist/leaflet-routing-machine.css'

const transactions = ref([])
const activeTrucks = {}
let map = null

// âš ï¸ BURAYI KENDÄ° IP ADRESÄ°NLE DEÄÄ°ÅTÄ°R! (Ã–rn: 192.168.1.35)
const API_BASE = 'http://192.168.217.130:5000/api'

// 1. Kamyonet (KÃ¼Ã§Ã¼k YÃ¼k)
const vanIcon = L.divIcon({
  className: 'vehicle-marker van',
  html: '<div style="font-size: 24px;">ğŸš</div>',
  iconSize: [40, 40],
  iconAnchor: [20, 20]
})

// 2. Kamyon (Orta YÃ¼k)
const truckIcon = L.divIcon({
  className: 'vehicle-marker truck',
  html: '<div style="font-size: 32px;">ğŸšš</div>',
  iconSize: [50, 50], // Biraz daha bÃ¼yÃ¼k
  iconAnchor: [25, 25]
})

// 3. TÄ±r (AÄŸÄ±r YÃ¼k)
const trailerIcon = L.divIcon({
  className: 'vehicle-marker trailer',
  html: '<div style="font-size: 40px;">ğŸš›</div>', // TÄ±r emojisi
  iconSize: [60, 60], // En bÃ¼yÃ¼k
  iconAnchor: [30, 30]
})

const createWarehouseIcon = () => {
  return L.divIcon({
    className: 'warehouse-marker', // Standart CSS sÄ±nÄ±fÄ±
    html: '<div class="pin"></div>',
    iconSize: [30, 30],
    iconAnchor: [15, 30]
  })
}

onMounted(async () => {
  // 1. HaritayÄ± BaÅŸlat (Standart AydÄ±nlÄ±k GÃ¶rÃ¼nÃ¼m)
  map = L.map('map').setView([39.0, 35.0], 6)

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'Â© OpenStreetMap contributors',
    maxZoom: 18
  }).addTo(map)

  // 2. Verileri Ã‡ek
  await loadMapData()

  // 3. Animasyon DÃ¶ngÃ¼sÃ¼nÃ¼ BaÅŸlat
  startAnimationLoop()
})

const loadMapData = async () => {
  try {
    // DepolarÄ± Ã‡ek ve Pinle
    const wRes = await axios.get(`${API_BASE}/warehouses`)

    if (wRes.data && Array.isArray(wRes.data)) {
      wRes.data.forEach(w => {
        
 let totalStock = 0

      let popupHtml = `<div style="min-width:160px;">`
      popupHtml += `<h3 style="margin:0; color:#2c3e50;">${w.name}</h3>`
      popupHtml += `<small style="color:#777;">${w.city}</small><hr style="margin:5px 0; border:0; border-top:1px solid #ddd;">`
      
      if(w.inventory && w.inventory.length > 0) {
        w.inventory.forEach(i => { 
          const qty = parseInt(i.quantity)
          totalStock += qty // Adedi toplama ekle
          popupHtml += `<div style="display:flex; justify-content:space-between; margin-bottom:2px;"><span>${i.item_name}:</span> <b>${qty}</b></div>`
        })
      } else { 
        popupHtml += "<i>Depo BoÅŸ</i>" 
      }
      
      // --- YENÄ° EKLENEN KISIM: TOPLAM STOK ---
      popupHtml += `<hr style="margin:5px 0; border:0; border-top:1px solid #ddd;">`
      popupHtml += `<div style="display:flex; justify-content:space-between; font-size:1rem; color:#2c3e50;"><strong>TOPLAM STOK:</strong> <strong>${totalStock}</strong></div>`
      popupHtml += `</div>`

      // Marker Ekle
      L.marker([w.latitude, w.longitude], { 
        icon: createWarehouseIcon(), // Standart mavi ikon fonksiyonunu Ã§aÄŸÄ±rdÄ±k
        zIndexOffset: 1000 
      }).addTo(map).bindPopup(popupHtml)
    })

    // Ä°ÅŸlem GeÃ§miÅŸini Ã‡ek
    const tRes = await axios.get(`${API_BASE}/transactions`)
    transactions.value = tRes.data

    const sRes = await axios.get(`${API_BASE}/map/active-shipments`)
    const activeShipments = sRes.data
    
    // ArtÄ±k 'transactions' yerine 'activeShipments' Ã¼zerinde dÃ¶nÃ¼yoruz
    activeShipments.forEach(shipment => {
      drawRouteAndTruck(shipment)
    })

  } catch (e) {
    console.error("Veri hatasÄ± (IP Adresini kontrol et):", e)
    alert("Veriler yÃ¼klenemedi! LÃ¼tfen koddaki IP adresini kontrol et.")
  }
}

const drawRouteAndTruck = (transfer) => {
  if (activeTrucks[transfer.id]) return

  const router = L.Routing.control({
    waypoints: [
      L.latLng(transfer.source_lat, transfer.source_lng),
      L.latLng(transfer.target_lat, transfer.target_lng)
    ],
    router: L.Routing.osrmv1({ serviceUrl: 'https://router.project-osrm.org/route/v1' }),
    lineOptions: {
      styles: [{ color: '#e67e22', opacity: 0.8, weight: 6 }],
      interactive: false,
      addWaypoints: false
    },
    show: false,
    addWaypoints: false,
    fitSelectedRoutes: false
  }).addTo(map)

  router.on('routesfound', function(e) {
    const coordinates = e.routes[0].coordinates

    let selectedIcon = truckIcon; // VarsayÄ±lan
    if (transfer.vehicle_type === 'VAN') selectedIcon = vanIcon;
    if (transfer.vehicle_type === 'TRAILER') selectedIcon = trailerIcon;

    const marker = L.marker([transfer.source_lat, transfer.source_lng], { icon: selectedIcon })
      .addTo(map)
      .bindPopup(`
        <b>${selectedIcon === trailerIcon ? 'ğŸš› AÄIR NAKLÄ°YE' : selectedIcon === vanIcon ? 'ğŸš HAFÄ°F SEVKÄ°YAT' : 'ğŸšš SEVKÄ°YAT'}</b><br>
        <div style="max-width:200px; word-wrap:break-word;">${transfer.summary}</div>
        <hr style="margin:5px 0;">
        Toplam AÄŸÄ±rlÄ±k: <b>${transfer.total_weight} kg</b><br>
        Hedef: ${transfer.target_name}
      `)

    activeTrucks[transfer.id] = {
      marker: marker,
      path: coordinates,
      startTime: new Date(transfer.created_at).getTime(),
      duration: 60000
    }
  })
}

const startAnimationLoop = () => {
  setInterval(() => {
    const now = Date.now()
    Object.keys(activeTrucks).forEach(id => {
      const truck = activeTrucks[id]
      const elapsed = now - truck.startTime
      const progress = (elapsed % truck.duration) / truck.duration
      const currentIndex = Math.floor(progress * truck.path.length)

      if (truck.path[currentIndex]) {
        truck.marker.setLatLng([truck.path[currentIndex].lat, truck.path[currentIndex].lng])
      }
    })
  }, 100)
}
</script>

